<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-4">
 <%= form_for [current_user, Item.new] do |f| %>
      <div class='form-group'>
        <%= f.label :Item %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Add a new item.' %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
</div>